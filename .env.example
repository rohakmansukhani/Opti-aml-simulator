# Environment variables for docker-compose
# Copy this file to .env and update values

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://postgres:change_this_password_in_production@postgres:5432/sas_simulator

# Redis / Upstash
# Option 1: Local Redis (development)
REDIS_URL=redis://redis:6379/0

# Option 2: Upstash (production)
# Get from https://upstash.com after creating database
# REDIS_URL=rediss://default:YOUR_PASSWORD@your-db.upstash.io:6379

# Application
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Monitoring (OPTIONAL - leave empty to disable)
# Get free Sentry account at https://sentry.io if you want error tracking
SENTRY_DSN=

# Supabase (if using)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
